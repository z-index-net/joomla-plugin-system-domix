            </fieldset>
        </fields>
    </config>
    <updateservers>
        <server type="extension" priority="1" name="System - domix">https://raw.githubusercontent.com/z-index-net/joomla-plugin-system-domix/master/updatestream.xml</server>
    </updateservers>

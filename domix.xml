    <version>1.5.5</version>
    <description>DomiX Debug Class</description>
    <files>
        <filename plugin="domix">domix.php</filename>
    </files>
    <!-- Joomla! 1.6+ -->
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="mail" type="text" default="mail@mediahof.de" size="25" label="E-Mail Empfänger" description="Empfänger für domixM();" />
                <field name="ip" type="text" default="217.70.192.236" size="25" label="erlaubte IP" description="Nur diese IP sieht domix ausgaben." />
                <param name="ips" type="textarea" default="217.70.192.236" cols="30" rows="5" label="erlaubte IPAdressen" description="Pro Zeile eine IP-Adresse. IPv6 Netze möglich." />
            </fieldset>
        </fields>
    </config>
    <!-- Joomla! 1.5 -->
    <params>
        <param name="mail" type="text" default="mail@mediahof.de" size="25" label="E-Mail Empfänger" description="Empfänger für domixM();" />
        <param name="ips" type="textarea" default="217.70.192.236"  cols="30" rows="5" label="erlaubte IP" description="Pro Zeile eine IP-Adresse. IPv6 Netze möglich." />
    </params>
</install>